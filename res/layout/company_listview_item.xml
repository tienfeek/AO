<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#74a662"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_centerInParent="true"
        android:layout_margin="40dip"
        android:gravity="center"
        android:text="我好像喜欢上了一个人了...怎么办..."
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
    <!-- android:layout_below="@+id/content_tv" -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true" >

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="20140-05-03"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/list_item_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="20dip"
            android:src="@drawable/ic_card_more" />

        <TextView
            android:id="@+id/list_item_commentnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@+id/list_item_menu"
            android:textColor="#FFFFFF"
            android:text="50" />

        <ImageView
            android:id="@+id/list_item_commenticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dip"
            android:layout_toLeftOf="@+id/list_item_commentnum"
            android:src="@drawable/ic_card_conversation" />

        <TextView
            android:id="@+id/list_item_zannum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/list_item_commenticon"
            android:textColor="#FFFFFF"
            android:text="90" />

        <ImageView
            android:id="@+id/list_item_zanicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dip"
            android:layout_toLeftOf="@+id/list_item_zannum"
            android:src="@drawable/dianzanselector" />
    </RelativeLayout>

</RelativeLayout>